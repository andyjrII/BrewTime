<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= menuItem.name %></title>
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/style.css" />
    <script
      src="https://kit.fontawesome.com/421d6e9a59.js"
      crossorigin="anonymous"
    ></script>
    <!-- Paystack JS -->
    <script src="https://js.paystack.co/v1/inline.js"></script>
  </head>
  <body class="bg-light text-dark">
    <div class="container mt-5">
      <h1 class="display-4 text-center text-dark mb-4"><%= menuItem.name %></h1>

      <div class="row g-5">
        <!-- Left Column: Menu Item Image -->
        <div class="col-md-6">
          <img
            src="<%= menuItem.image %>"
            alt="<%= menuItem.name %>"
            class="img-fluid rounded shadow"
          />
          <p class="lead text-dark my-4"><%= menuItem.description %></p>
          <p class="h4 text-muted mb-3">Price: &#x20A6;<%= menuItem.price %></p>
          <!-- Order Now Button -->
          <button
            class="btn btn-coffee text-white"
            data-bs-toggle="modal"
            data-bs-target="#checkoutModal"
          >
            Order Now
          </button>
        </div>

        <!-- Right ColumnReviews -->
        <div class="col-md-6">
          <!-- Customer Reviews Section -->
          <h2 class="mt-5 mb-3 text-dark">Reviews</h2>
          <ul class="list-unstyled mb-5">
            <% if (menuItem.reviews.length > 0) { %> <%
            menuItem.reviews.forEach(review => { %>
            <li class="mb-3 pb-3 border-bottom border-coffee-light">
              <strong class="text-coffee-darker"
                ><%= review.customerName %>:</strong
              >
              <span class="text-coffee-dark"><%= review.review %></span>
            </li>
            <% }) %> <% } else { %>
            <li class="text-coffee-dark italic">No reviews yet.</li>
            <% } %>
          </ul>
        </div>
      </div>
      <div class="row border-top mt-5">
        <!-- Add Review Form -->
        <h2 class="mt-3">Give us a feedback</h2>
        <form
          action="/menu/<%= menuItem.id %>/addReview"
          method="POST"
          class="bg-coffee-light p-4 rounded-lg shadow-md"
        >
          <div class="mb-3">
            <label for="customerName" class="form-label">Your Name</label>
            <input
              type="text"
              name="customerName"
              class="form-control"
              id="customerName"
              required
            />
          </div>
          <div class="mb-3">
            <label for="comment" class="form-label">Your Review</label>
            <textarea
              name="comment"
              class="form-control"
              id="comment"
              rows="3"
              required
            ></textarea>
          </div>
          <button type="submit" class="btn btn-coffee text-white">
            Submit Review
          </button>
        </form>
      </div>
    </div>

    <!-- Bootstrap Modal for Checkout Form -->
    <div
      class="modal fade"
      id="checkoutModal"
      tabindex="-1"
      aria-labelledby="checkoutModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="checkoutModalLabel">Checkout</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <form id="checkoutForm">
              <div class="mb-3">
                <label for="checkoutCustomerName" class="form-label"
                  >Your Name</label
                >
                <input
                  type="text"
                  class="form-control"
                  id="checkoutCustomerName"
                  required
                />
              </div>
              <div class="mb-3">
                <label for="checkoutCustomerEmail" class="form-label"
                  >Your Email</label
                >
                <input
                  type="email"
                  class="form-control"
                  id="checkoutCustomerEmail"
                  required
                />
              </div>
              <button
                type="submit"
                class="btn btn-coffee text-white"
                id="paystackBtn"
              >
                Proceed to Pay
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <!-- Paystack Integration -->
    <script>
      document
        .getElementById("checkoutForm")
        .addEventListener("submit", function (e) {
          e.preventDefault();

          // Get customer details
          var customerName = document.getElementById("checkoutCustomerName").value;
          var customerEmail = document.getElementById("checkoutCustomerEmail").value;

          // Trigger Paystack Payment Pop-up
          var handler = PaystackPop.setup({
            key: "pk_test_244916c0bd11624711bdab398418c05413687296",
            email: customerEmail,
            amount: <%= menuItem.price * 100 %>, // Price in kobo
            currency: "NGN",
            ref: "BRWTM" + Math.floor(Math.random() * 1000000000 + 1), // Unique transaction reference
            metadata: {
              custom_fields: [
                {
                  display_name: "Customer Name",
                  variable_name: "customer_name",
                  value: customerName,
                },
              ],
            },
            callback: function (response) {
              // Transaction successful, send data to server to save order
              fetch("/menu/saveOrder", {
                method: "POST",
                headers: {
                  "Content-Type": "application/json",
                },
                body: JSON.stringify({
                  customerName: customerName,
                  menuItemName: "<%= menuItem.name %>",
                  totalAmount: <%= menuItem.price %>,
                  paymentStatus: "Successful",
                }),
              })
                .then((res) => res.json())
                .then((data) => {
                  alert("Payment successful! Transaction reference: " + response.reference);
                })
                .catch((error) => {
                  console.error("Error:", error);
                });
            },
            onClose: function () {
              // Transaction failed
              fetch("/saveOrder", {
                method: "POST",
                headers: {
                  "Content-Type": "application/json",
                },
                body: JSON.stringify({
                  customerName: customerName,
                  menuItemName: "<%= menuItem.name %>",
                  totalAmount: <%= menuItem.price %>,
                  paymentStatus: "Failed", // Payment failed
                }),
              })
                .then((res) => res.json())
                .then((data) => {
                  alert("Transaction was not completed, window closed.");
                })
                .catch((error) => {
                  console.error("Error:", error);
                });
            },
          });

          handler.openIframe(); // Open Paystack iframe
        });
    </script>

    <!-- Bootstrap JS -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
