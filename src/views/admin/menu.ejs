<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/adminHead', {title: "Manage Menu"}) %>
  <body>
    <div class="wrapper">
      <div class="main">
        <%- include('../partials/sidebar') %>
        <!-- Dashboard Content -->
        <div class="content p-4">
          <div class="container">
            <h1 class="mb-4">Manage Menu</h1>

            <div class="row">
              <% menuItems.forEach(item => { %>
              <div class="col-12 mb-3">
                <div class="card flex-row p-2">
                  <!-- Image and Buttons on the Left -->
                  <div
                    class="card-image d-flex flex-column justify-content-between"
                  >
                    <img
                      src="<%= item.image %>"
                      alt="<%= item.name %>"
                      class="img-fluid mb-3"
                      style="max-width: 150px; max-height: 150px"
                    />
                    <div>
                      <a
                        href="/admin/menu/<%= item.id %>/edit"
                        class="btn btn-warning btn-sm me-2 w-100 mb-2"
                        >Edit</a
                      >
                      <form
                        action="/admin/menu/<%= item.id %>/delete"
                        method="POST"
                      >
                        <button
                          type="submit"
                          class="btn btn-danger btn-sm w-100"
                        >
                          Delete
                        </button>
                      </form>
                    </div>
                  </div>

                  <!-- Item Details on the Right -->
                  <div
                    class="card-body d-flex flex-column justify-content-between"
                  >
                    <div>
                      <h5 class="card-title"><%= item.name %></h5>
                      <p class="card-text"><%= item.description %></p>
                      <strong>Price:</strong> &#x20A6;<%= item.price %>
                    </div>
                  </div>
                </div>
              </div>
              <% }); %>
            </div>
            <a href="/admin/menu/add" class="btn btn-primary mb-3"
              >Add New Menu Item</a
            >
          </div>
          <%- include('../partials/adminFooter') %>
        </div>
      </div>
    </div>
  </body>
</html>
