generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Menu {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  price       Float
  image       String
  createdAt   DateTime @default(now())
}

model Admin {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}

model Order {
  id            Int      @id @default(autoincrement())
  customerName  String
  items         String
  totalAmount   Float
  paymentStatus String   @default("Pending")
  createdAt     DateTime @default(now())
}

model Review {
  id           Int      @id @default(autoincrement())
  customerName String
  review       String
  rating       Int
  createdAt    DateTime @default(now())
}
